<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="group_detail_bar_name">
        <item name="android:layout_width">235dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:gravity">center|left</item>
        <item name="autoSizeTextType">none</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="group_detail_bar_input">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center_horizontal|center_vertical|end</item>
    </style>

    <style name="group_detail_bar_switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:textColor">#1B9F89</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_horizontal|center_vertical|end</item>
    </style>

    <style name="collapsingToolbar_expanded" >
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextAppearance.Design.CollapsingToolbar.Expanded2"
        parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">25sp</item>

    </style>

    <style name="item_schedule_create_title">
        <item name="android:layout_width">235dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:gravity">center|left</item>
        <item name="autoSizeTextType">none</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_schedule_create_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center_horizontal|center_vertical|end</item>
    </style>



</resources>
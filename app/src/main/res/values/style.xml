<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#009AA3</item>
        <item name="colorPrimaryDark">#009AA3</item>
        <item name="colorAccent">#009AA3</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>

    </style>

    <style name="AppTheme.MaterialDialogTime" parent="AppTheme">
        <item name="colorAccent">@color/primary_dark</item>
        <item name="md_color_button_text">@color/primary_dark</item>
        <item name="md_ripple_color">@color/primary_text_grey</item>
        <item name="md_corner_radius">16dp</item>
    </style>

    <style name="AppTheme.MaterialDialogDate" parent="AppTheme">
        <item name="colorPrimary">@color/primary_dark</item>
    </style>

    <style name="MyTabTextAppearance" parent="Widget.Design.TabLayout">
        <item name="android:textSize">18sp</item>  <!-- 必要なテキストサイズ -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/primary_white</item>
    </style>
</resources>
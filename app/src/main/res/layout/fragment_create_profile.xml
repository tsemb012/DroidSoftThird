<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
tools:context=".ui.createProfile.CreateProfileFragment">

    <data>
        <variable
            name="viewModel"
            type="com.example.droidsoftthird.ui.createProfile.CreateProfileViewModel" />
    </data>
<!--TODO　キレイに表示されるよう調整する。-->
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/caption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/caption"
        android:layout_width="398dp"
        android:layout_height="6dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar"
        />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/nickname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/caption" />

    <EditText
        android:id="@+id/edit_profile_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/input_a_name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profile_name"
        app:layout_constraintTop_toTopOf="@id/caption"
        android:text="@={viewModel.userName}"/>


    <FrameLayout
        android:id="@+id/image_frame"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_name"
        >

        <ImageView
            android:id="@+id/edit_background_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/grey"
            app:imageURI="@{viewModel.backgroundImageUri}"

            />

        <ImageView
            android:id="@+id/edit_profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:background="@color/colorPrimaryDark"
            android:clickable="true"
            app:imageURI="@{viewModel.userImageUri}"/>
    </FrameLayout>

    <EditText
        android:id="@+id/edit_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="20"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:hint="@string/edit_a_comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_frame"
        android:text="@={viewModel.userIntroduction}"/>

    <TextView
        android:id="@+id/edit_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/gender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_comment" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/edit_gender"
        app:layout_constraintTop_toBottomOf="@+id/edit_comment"
        android:checkedButton="@={viewModel.gender}"
        >

        <RadioButton
            android:id="@+id/radio_button_male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/male" />

        <RadioButton
            android:id="@+id/radio_button_female"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/female" />

        <RadioButton
            android:id="@+id/radio_button_gender_private"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gender_private" />
    </RadioGroup>

    <TextView
        android:id="@+id/profile_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/age"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_gender" />

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/seek_bar_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:dsb_max="100"
        app:dsb_min="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/profile_age"
        app:layout_constraintEnd_toStartOf="@+id/edit_age"
        app:layout_constraintTop_toBottomOf="@+id/edit_gender"
        />
    <!--TODO 選択した値をLiveDataに反映できるようにする。-->

    <TextView
        android:id="@+id/edit_age"
        android:layout_width="94dp"
        android:layout_height="18dp"
        android:layout_marginTop="10dp"
        android:text="50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/seek_bar_age"
        app:layout_constraintTop_toBottomOf="@+id/edit_gender" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_residential_area"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:padding="0dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_age">

        <TextView
            android:id="@+id/residential_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/residential_area"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/edit_residential_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_set"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/residential_area"
            app:layout_constraintTop_toTopOf="parent"
            app:prefecture="@{viewModel.prefecture_r}"
            app:city="@{viewModel.city_r}"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/btn_add_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/register_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_residential_area"
        android:onClick="@{() -> viewModel.createUserProfile()}"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
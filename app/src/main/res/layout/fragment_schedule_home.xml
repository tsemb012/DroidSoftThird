<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_layout_height_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/primary_base_yellow"
            app:tabSelectedTextColor="@color/primary_dark"
            app:tabIndicator="@drawable/indicator"
            app:tabIndicatorGravity="stretch"
            />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tab_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp"
            android:background="@color/primary_base_yellow"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/floating_button_margin_end"
            android:layout_marginBottom="@dimen/floating_button_margin_bottom"
            android:elevation="@dimen/floating_button_elevation"
            app:borderWidth="0dp"
            android:clickable="true"
            android:outlineSpotShadowColor="@color/primary_accent_purple"
            android:backgroundTint="@color/primary_accent_purple"
            app:layout_constraintBottom_toBottomOf="@+id/pager"
            app:layout_constraintEnd_toEndOf="@+id/pager"
            app:srcCompat="@drawable/ic_baseline_add_circle_24"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/homeFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.droidsoftthird.MainActivity"
        android:label="MainActivity" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.droidsoftthird.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_addGroupFragment"
            app:destination="@id/addGroupFragment" />
        <action
            android:id="@+id/action_homeFragment_to_groupDetailFragment"
            app:destination="@id/groupDetailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_createProfileFragment"
            app:destination="@id/createProfileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_myPageFragment"
            app:destination="@id/myPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/addGroupFragment"
        android:name="com.example.droidsoftthird.ui.addGroup.AddGroupFragment"
        android:label="AddGroupFragment" />
    <fragment
        android:id="@+id/groupDetailFragment"
        android:name="com.example.droidsoftthird.ui.groupDetail.GroupDetailFragment"
        android:label="fragment_group_detail"
        tools:layout="@layout/fragment_group_detail" >
        <argument
            android:name="groupId"
            app:argType="string" />
        <action
            android:id="@+id/action_groupDetailFragment_to_myPageFragment"
            app:destination="@id/myPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/recommendPagerFragment"
        android:name="com.example.droidsoftthird.ui.reccomendPager.RecommendPagerFragment"
        android:label="RecommendPagerFragment" >
        <action
            android:id="@+id/action_recommendPagerFragment_to_groupDetailFragment"
            app:destination="@id/groupDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/createProfileFragment"
        android:name="com.example.droidsoftthird.ui.createProfile.CreateProfileFragment"
        android:label="fragment_create_profile"
        tools:layout="@layout/fragment_create_profile" />
    <fragment
        android:id="@+id/myPageFragment"
        android:name="com.example.droidsoftthird.ui.myPage.MyPageFragment"
        android:label="MyPageFragment" >
        <action
            android:id="@+id/action_myPageFragment_to_chatRoomFragment"
            app:destination="@id/chatRoomFragment" />
    </fragment>
    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.example.droidsoftthird.ui.schedule.ApprovedScheduleFragment"
        android:label="fragment_schedule"
        tools:layout="@layout/fragment_schedule_approved" >
        <argument
            android:name="groupId"
            app:argType="string" />
        <action
            android:id="@+id/action_scheduleFragment_to_scheduleDetailFragment"
            app:destination="@id/scheduleDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/videoFragment"
        android:name="com.example.droidsoftthird.ui.video.VideoFragment"
        android:label="VideoFragment" >
        <argument
            android:name="groupId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/chatRoomFragment"
        android:name="com.example.droidsoftthird.ui.chat.ChatRoomFragment"
        android:label="ChatRoomFragment" >
        <action
            android:id="@+id/action_chatRoomFragment_to_videoFragment"
            app:destination="@id/videoFragment" />
        <action
            android:id="@+id/action_chatRoomFragment_to_scheduleFragment"
            app:destination="@id/scheduleFragment" />
        <action
            android:id="@+id/action_chatRoomFragment_to_groupDetailFragment"
            app:destination="@id/groupDetailFragment" />
        <argument
            android:name="groupId"
            app:argType="string" />
    </fragment>
    <action android:id="@+id/action_global_chatRoomFragment" app:destination="@id/chatRoomFragment" />
    <fragment
        android:id="@+id/scheduleDetailFragment"
        android:name="com.example.droidsoftthird.ui.scheduleDetail.ScheduleDetailFragment"
        android:label="schedule_detail_fragment"
        tools:layout="@layout/schedule_detail_fragment" >
        <argument
            android:name="scheduleId"
            app:argType="string" />
    </fragment>


</navigation>